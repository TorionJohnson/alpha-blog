<h2>Listing all articles</h2>

<% if @articles.empty? %>
    <p>There's no articles to show</p>
<% else %>
    <% @articles.each do |a| %>
        <div class="row">
            <div class="col-xs-8 col-xs-offset-2">
                <div class="well well-lg">
                    <div class="article-title">
                        <%= link_to a.title, article_path(a.id) %>
                    </div>
                    <div class="article-body">
                        <%= truncate(a.description, length: 100) %>
                    </div>
                    <div class="article-actions">
                        <%= link_to 'Edit', edit_article_path(a.id), class: "btn btn-primary" %>
                        <%= link_to 'Show', article_path(a.id), class: "btn btn-primary" %>
                        <%= link_to 'Delete', article_path(a.id), method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-danger" %>
                    </div>
                    <hr>
                </div>
            </div>
        </div>
    <% end %>
<% end %>
<br />