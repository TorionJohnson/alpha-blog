<h2>All articles</h2>

<% if @articles.empty? %>
    <p>There's no articles to show</p>
<% else %>
    <p>
        <%= link_to "Create new article", new_article_path %>
    </p>
    <table>
        <tr>
            <th>Title</th>
            <th>Description</th>
        </tr>
        <% @articles.each do |a| %>
        <tr>
            <td><%= a.title  %></td>
            <td><%= a.description  %></td>
            <td><%= link_to "Edit", edit_article_path(a) %></td>
            <td><%= link_to "Show", article_path(a) %></td>
        </tr>
        <% end %>
    </table>
<% end %>
<br />